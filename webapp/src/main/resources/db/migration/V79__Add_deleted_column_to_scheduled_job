ALTER TABLE scheduled_job ADD COLUMN IF NOT EXISTS deleted BOOLEAN NOT NULL DEFAULT FALSE;
UPDATE scheduled_job SET deleted = FALSE WHERE deleted IS NULL;
ALTER TABLE scheduled_job ALTER COLUMN deleted SET DEFAULT FALSE;

ALTER TABLE scheduled_job_aud ADD COLUMN IF NOT EXISTS deleted BOOLEAN NOT NULL DEFAULT FALSE;
UPDATE scheduled_job_aud SET deleted = FALSE WHERE deleted IS NULL;
ALTER TABLE scheduled_job_aud ALTER COLUMN deleted SET DEFAULT FALSE;